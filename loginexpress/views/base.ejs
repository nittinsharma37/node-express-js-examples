<%-include("head")-%>
<body>
    <div class="container-custom text-center center-div" id="login">
        <div class="container w-25 border py-3 shadow p-3 mb-5  rounded">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login System express</h2>
                <span>Log in for the existing user</span>
                <% if(locals.logout){ %>
                    <div class="alter alert-success text-center">
                        <%= logout %>
                    </div>
                <% } %>
            </div>
            <form action="/route/login" method="POST" class="pt-3">
                <div class="form-group my-2">
                    <input type="text" class="form-control" placeholder="Enter Email" name="email">
                    <small class="text-left form-text text-muted register-text">Register email address</small>
                </div>
                <div class="form-group my-2">
                    <input type="password" name="password" class="form-control" placeholder="Enter password">
                </div>
                <button type="submit" class="btn btn-success rounded-pill">Submit</button>
            </form>
        </div>
    </div>
</body>
</html>